{
  "name": "tavern-api",
  "version": "1.0.0",
  "description": "Backend for Tavern",
  "author": "Jakub Stasiak",
  "license": "ISC",
  "keywords": [],
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --project .",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "start:dev": "nodemon src/index.ts",
    "test:watch": "npm run test:prepare && NODE_ENV=test jest --runInBand --detectOpenHandles --watch && npm run test:clean",
    "test:prepare": "docker-compose -f tests/docker-compose.test.yml up -d",
    "test:clean": "docker stop postgres-test && docker rm postgres-test",
    "test": "npm run test:prepare && NODE_ENV=test jest --runInBand && npm run test:clean",
    "lint": "eslint ./src/ --ext .ts",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier-format && npm run lint"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "grpc": "^1.24.11",
    "grpc-tools": "^1.11.2",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.4",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.11.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "grpc_tools_node_protoc_ts": "^5.3.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js",
      "d.ts"
    ],
    "transform": {
      "^.+\\.(ts)$": [
        "ts-jest",
        {
          "isolatedModules": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/tests/**/*.+(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "src",
      "dist",
      "tests/helpers"
    ]
  }
}
